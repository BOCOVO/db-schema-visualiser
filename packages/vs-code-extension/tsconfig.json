{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "vite.config.js"],
  "include": ["**/*.ts", "**/*.tsx"]
}
