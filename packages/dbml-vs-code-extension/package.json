{
  "name": "dbml-erd-visualizer",
  "displayName": "DBML Entity-Relationship Diagrams visualizer",
  "description": "An Vscode extension to visualize the database schema in ERD ( Entity Relationship Diagram ) from dbml or prisma file in your vscode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "dbml-erd-visualizer.previewDiagrams",
        "title": "Show diagram",
        "icon": {
          "light": "./assets/icons/eye.svg",
          "dark": "./assets/icons/eye.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == dbml",
          "command": "dbml-erd-visualizer.previewDiagrams",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "DBML Entity Relationship Diagram",
      "properties": {
        "dbmlERDPreviewer.preferredTheme": {
          "type": "string",
          "default": "dark",
          "enum": [
            "dark",
            "light"
          ],
          "enumDescriptions": [
            "To use dark mode theme colors",
            "To use light mode theme colors"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run build && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build": "vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tomjs/vite-plugin-vscode": "^2.2.0",
    "@tomjs/vscode-extension-webview": "^1.2.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/react": "^18.2.75",
    "@types/react-dom": "^18.2.24",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "dependencies": {
    "dbml-to-json-table-schema": "0.0.0",
    "json-table-schema-visualizer": "1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shared": "0.0.0"
  }
}
